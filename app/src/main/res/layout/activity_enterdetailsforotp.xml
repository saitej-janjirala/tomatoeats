<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Enterdetailsforotp"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/foodtruck"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="25dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dinner"
        />
    <TextView
        android:id="@+id/tophint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodtruck"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/comic"
        android:textColor="@color/white"
        android:text="Enter your registered mobile number and email below"
        />
    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/comic"
        android:padding="10dp"
        android:drawablePadding="8dp"
        android:inputType="phone"
        android:textSize="15sp"
        android:layout_below="@+id/tophint"
        android:hint="Mobile number(10 digits)"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/ic_phone_android_black_24dp"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/comic"
        android:padding="10dp"
        android:drawablePadding="8dp"
        android:inputType="textEmailAddress"
        android:textSize="15sp"
        android:hint="Email Address"
        android:layout_below="@+id/number"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/ic_email_black_24dp"/>
    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_below="@+id/email"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/comic"
        android:padding="5dp"
        android:text="Next"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:background="@color/colorPrimaryDark"/>





</RelativeLayout>